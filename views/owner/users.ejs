<% layout('../layout/boilerplate') -%>

<table class="table table-primary">
    <thead class="thead-primary">
        <tr>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Mobile No.</th>
            <th>Balance due</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        <% if (allUser && allUser.length > 0) { %>
            <% for(let user of allUser){ %>
                <tr>
                    <td>
                        <%= user.username %>
                    </td> 
                    <td>
                        <%= user.address %>, <%= user.pincode %> 
                    </td>
                    <td>
                        <%= user.mobile %>
                    </td>
                    <td>
                        <%= user.balance_due%>
                    </td>
                    <td>
                        <form method="GET"action="/owner/<%=user._id%>/edit">
                            <button class="btn btn-dark">Edit</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        <% } else { %>
            <tr>
                <td colspan="4">No Customer in the List</td>
            </tr>
        <% } %>
    </tbody>
</table>
