<% layout('../layout/boilerplate') -%>

<style>
    #filters {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: nowrap;
        margin: 20px 0;
        overflow-x: auto;
        left: 10px;
    }

    .filter {
        text-align: center;
        padding: 10px 20px;
        border: 2px solid #ff4e50;
        border-radius: 25px;
        background-color: white;
        color: #ff4e50;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        flex: 0 0 auto;
        white-space: nowrap;
    }

    .filter:hover {
        background-color: #ff4e50;
        color: white;
        opacity: 1;
    }

    .filter i {
        font-size: 1.6rem;
        margin-bottom: 5px;
    }

    @media screen and (max-width: 389px) {
        .filter {
            margin: 0.2rem;
            padding: 5px 10px;
            font-size: 0.8rem;
        }

        .filter i {
            font-size: medium;
        }

    }

    .card {
        margin: 0.5rem;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .card img {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        height: 20rem;
        object-fit: cover;
    }

    .card-body {
        padding: 15px;
        text-align: center;
    }

    .card-text {
        font-size: 1rem;
        color: #333;
    }

    .card-text b {
        font-size: 1.2rem;
        color: #ff4e50;
    }

    hr {
        border: 0;
        height: 1px;
        background: #ff4e50;
        background-image: linear-gradient(to right, #ff4e50, #f9d423);
        margin: 20px 0;
    }

    h2 {
        text-align: center;
        opacity: 0.5;
        font-size: 1.5rem;
        margin: 20px 0;
    }
</style>
    </style>
    <div id="filters" >
        <a class="filter nav-link" href="/items/hardware">
            <div><i style="font-size: 1.6rem;" class="fa-solid fa-gear" ></i></div>
            <p>Hardware</p>
        </a>
        <a class="filter nav-link" href="/items/clothes">
            <div><i style="font-size: 1.6rem;" class="fa-solid fa-shirt"></i></div>
            <p>Cloths</p>
        </a>
        <a class="filter nav-link" href="/items/accessories">
            <div><i style="font-size: 1.6rem;" class="fa-solid fa-hammer"></i></div>
            <p>Accessories</p>
        </a>
        <a class="filter nav-link" href="/items/paints">
            <div><i style="font-size: 1.6rem;" class="fa-solid fa-brush"></i></div>
            <p>Paints</p>
        </a>
        <a class="filter nav-link" href="/items/grocery">
            <div><i style="font-size: 1.6rem;" class="fa-solid fa-cookie-bite"></i></div>
            <p>Grocery</p>
        </a>
    </div>
    <hr>
    <%if(allItem.length==0){%>
        <h2 style="opacity: 0.5;">Sorry! I don't have this item on my Shop</h2>
        <%}%>
    
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 ">
        
        <%for(let item of allItem){%>
            <div class="card" style="width: 18rem">
                <a href="/items/<%=item._id%>/show.ejs" class="item-link">
                    <img src="<%=item.image.url%>" class="card-img-top" alt="item_img" style="height: 20rem">
                    <div class="card-img-overlay">
                        <%=item.description%>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=item.title%>
                            </b>
                            <br>
                            Price: &#8377;<%= item.detail[0].price.toLocaleString("en-In") %>/<%= item.unit %>
                        </p>
                </a>
            </div>
    </div>
    <%}%>
        </div>
